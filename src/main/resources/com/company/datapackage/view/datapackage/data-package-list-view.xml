<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://dataPackageListView.title"
      focusComponent="dataPackagesDataGrid">
    <data>
        <collection id="dataPackagesDc"
                    class="com.company.datapackage.entity.DataPackage">
            <fetchPlan extends="_base">
                <property name="datapackorg" fetchPlan="_base">
                    <property name="organization" fetchPlan="_base"/>
                </property>
                <property name="datapackrole" fetchPlan="_base">
                    <property name="role" fetchPlan="_base"/>
                </property>
                <property name="datapackuser" fetchPlan="_base">
                    <property name="user" fetchPlan="_base"/>
                </property>
                <property name="displayValue"/>
            </fetchPlan>
            <loader id="dataPackagesDl" readOnly="true">
                <query>
                    <![CDATA[select e from DataPackage e]]>
                </query>
            </loader>
        </collection>
        <collection id="organizationsDc" class="com.company.datapackage.entity.Organization" fetchPlan="_base">
            <loader id="organizationsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Organization e]]>
                </query>
            </loader>
        </collection>
        <collection id="rolesDc" class="com.company.datapackage.entity.Role" fetchPlan="_base">
            <loader id="rolesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Role e]]>
                </query>
            </loader>
        </collection>
        <collection id="usersDc" class="com.company.datapackage.entity.User" fetchPlan="_base">
            <loader id="usersDl" readOnly="true">
                <query>
                    <![CDATA[select e from User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="dataPackagesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="dataPackagesDataGrid.createAction"/>
            <button id="editButton" action="dataPackagesDataGrid.editAction"/>
            <button id="removeButton" action="dataPackagesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="dataPackagesDl"/>
        </hbox>
        <dataGrid id="dataPackagesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="dataPackagesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="object"/>
                <column property="displayValue"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
